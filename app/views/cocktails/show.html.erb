<div class="background-container">
  <div class="show-header">
    <div>
      <%= image_tag "cigarette.png", class: "img" %>
    </div>
    <div>
      <%= image_tag "star.png", class: "img" %>
    </div>
  </div>

  <div class="show-composition-container">
    <div class="show-composition-sides">
      <%= image_tag "triangledown.png", class: "composition-img" %>
      <%= image_tag "leds.png", class: "composition-img" %>
      <%= image_tag "guitar.png", class: "composition-img" %>
    </div>

    <div class="show-composition-center">
      <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <h2><%= @cocktail.name %></h2>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= "#{dose.description} #{dose.ingredient.name}" %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash"></i></li>
        <% end %>
      <% end %>
      </ul>
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
    </div>

    <div class="show-composition-sides">
      <%= image_tag "hand.png", class: "composition-img" %>
      <%= image_tag "cherry.png", class: "composition-img" %>
      <%= image_tag "letter.png", class: "composition-img" %>
    </div>
  </div>

  <%= link_to "Too drunk? BACK TO COCKTAILS", cocktails_path %>
</div>






