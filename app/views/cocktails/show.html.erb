<div>
  <h2><%= @cocktail.name %></h2>

    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= "#{dose.description} #{dose.ingredient.name}" %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash"></i></li>
        <% end %>
      <% end %>
    </ul>

  <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
</div>
<div>
  <p><%= link_to "Back to cocktails", cocktails_path %></p>
</div>


